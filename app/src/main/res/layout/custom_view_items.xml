<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <TextView
        android:id="@+id/tv_view_item_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Item ID: 00001"
        android:textColor="#000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_view_item_name"
        style="@style/TextAppearance.AppCompat.Medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Item name"
        android:textColor="#000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_view_item_id" />

    <TextView
        android:id="@+id/tv_view_item_cat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Category: Dry Goods"
        android:textColor="#000"
        app:layout_constraintStart_toStartOf="@+id/tv_view_item_name"
        app:layout_constraintTop_toBottomOf="@+id/tv_view_item_name" />

    <TextView
        android:id="@+id/tv_view_item_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="Item desc"
        app:layout_constraintStart_toStartOf="@+id/tv_view_item_name"
        app:layout_constraintTop_toBottomOf="@+id/tv_view_item_cat" />

    <View
        style="@style/Divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_view_item_desc" />

</androidx.constraintlayout.widget.ConstraintLayout>